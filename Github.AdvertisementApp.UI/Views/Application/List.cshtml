@model List<AdvertisementListDto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}

@{
    <div class="container-fluid">

        <div class="text-end my-3 p-1">
            <a asp-action="Create" asp-controller="Application">Create New job posting</a>
        </div>

        @if (Model?.Count > 0)
        {
            <table class="mt-3 table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Created Date</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var advertisement in Model)
                    {
                        <tr>
                            <td>@advertisement.Title</td>
                            <td>@advertisement.CreatedDate.ToString("dddd, dd MMMM yyyy")</td>
                            <td>@(advertisement.Status?"Active":"Deactive")</td>
                            <td>
                                <a asp-action="Update" asp-controller="Application" asp-route-id="@advertisement.Id">Update</a>
                                |
                                <a asp-action="Remove" asp-controller="Application" asp-route-id="@advertisement.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="mt-3 text-center lead">
                There are no job postings.
            </div>
        }
    </div>

}

